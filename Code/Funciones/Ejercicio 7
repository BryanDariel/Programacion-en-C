//* Programa en C que, determine si un numero es primo o no

#include <stdio.h>

int esPrimo();

int main (){
    
    esPrimo();

    return 0;
}

int esPrimo(){
    
    int i, num, cont=0;
    printf("Inserte un número par verificar si es primo: ");
    scanf("%i", &num);
    
    for(i = 1; i <= num;i++){
        if (num %i == 0){
            cont++;
        }
    }
    
if (num < 0){
    printf("\nInserte un numero positivo.");
}

if (cont > 2) {
    printf("\nEl numero es compuesto");
}
else{
    printf("\nEl numero es primo");
}
}
